<% if @users_near_me.length == 0 %>
  <div class="container-search">
    <div class="span">
      <p>No bookmates near you yet</p>
      <p>Search again! </p>
      <div class="span-form">
        <%= render '/pages/search_form' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container-search">
  <!-- Bloc map et cards -->
    <div class="row">
      <h1 class ="red">Bookmates near you: </h1>
        <!-- Bloc cards -->
        <div class="col-xs-8" id="card-column">
          <% @bookmates_near_me.each do |bookmate|%>
            <!-- Carte utilisateur -->
            <div class="card-grey-search">
              <div class="user-avatar text-center">
                <div class = "card-user text-center">
                  <% if bookmate.user.photo? %>
                    <%= cl_image_tag bookmate.user.photo.path %>
                    <%= link_to "", bookmate_path(bookmate) %>
                  <% else %>
                    <%= image_tag 'avatar.png' %>
                    <%= link_to "", bookmate_path(bookmate) %>
                  <% end %>
                </div>
                <h2><%= bookmate.user.first_name %></h2>
              </div>
              <div class="user-details">
                <h2>A propos de <%= bookmate.user.first_name %></h2>
                <p>" <%= bookmate.description %> "</p>
                <div class ="user-details-books">
                  <h3>3 livres en commun</h3>
                  <h3>My reviews</h3>
                </div>
              </div>
              <div class="user-link">
                <i class="fa fa-chevron-circle-right fa-2x" aria-hidden="true"></i>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-xs-4" id="map-column">
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>

  <%= content_for(:after_js) do %>
    <script>
      $(document).ready(function () {
        var handler = Gmaps.build ('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(3);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
        }
      });
    });
    </script>
  <% end %>
<% end %>
