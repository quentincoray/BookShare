
  <!-- Cette row contient le Dashboard -->
    <!-- Cette colonne contient la barre latérale -->
  <div class = "col-xs-3" style = "background-color: #F3F3F3">
    <div class="side-bar-padding-left">
      <h3>MON COMPTE</h3>
        <div class="tabs">
          <a class="tab active" data-target="#profile">
            <h2>Mon profil</h2>
          </a>
          <a class="tab" data-target="#messages">
            <h2>Mes messages</h2>
            <%= render "message"%>
          </a>
          <a class="tab" data-target="#comments">
            <h2>Mes commentaires</h2>
            <%= render "comment"%>
          </a>
          <a class="tab" data-target="#favorite_books">
            <h2>Mes livres préférés</h2>
            <%= render "favorite-book"%>
          </a>
          <a class="tab" data-target="#bookmates">
            <h2>Mes bookmates</h2>
            <%= render "bookmate"%>
          </a>
          <a class="tab" data-target="#cart">
            <h2>Mon panier</h2>
            <%= render "cart"%>
          </a>
          <a class="tab" data-target="#orders">
            <h2>Mes commandes</h2>
          </a>
        </div>
      <h3>MON BOOKSTORE</h3>
        <div class="tabs">
          <a class="tab" data-target="#sales">
            <h2>Mes ventes</h2>
          </a>
          <a class="tab" data-target="#offers">
            <h2>Mon offre</h2>
          </a>
        </div>
    </div>
  </div>
    <!-- Cette colonne contient le contenu des tabs -->
    <div class = "col-xs-9">
<!--       Contenu du profil -->
      <div class="tab-content" id="profile">
        <%= render "profile"%>

      </div>
<!--       Contenu des messages -->
      <div class="tab-content hidden" id="messages">
        <h2>Mes messages</h2>
      </div>
<!--       Contenu des commentaires -->
      <div class="tab-content hidden" id="comments">
        <h1>Les commentaires à laisser</h1>
        <% @paid_orders.each do |paid_order| %>
          <div>
          <%= render "comment", order: paid_order %>
          </div>
        <% end %>
        <h1>Les commentaires que vous avez laissé</h1>
      </div>
<!--       Contenu des livres préférés -->
      <div class="tab-content hidden" id="favorite_books">
        <h2>Mes livres préférés</h2>
      </div>
<!--       Contenu des bookmates -->
      <div class="tab-content hidden" id="bookmates">
        <h2>Mes bookmates</h2>
      </div>
<!--       Contenu du panier -->
      <div class="tab-content hidden" id="cart">
        <h2>Mon panier</h2>
      </div>
<!--       Contenu des commandes -->
      <div class="tab-content hidden" id="orders">

        <h1>Mes commandes en cours</h1>
        <% @undelivered_orders.each do |undelivered_order| %>
          <div>
          <%= render "order", order: undelivered_order %>
          </div>
        <% end %>

        <h1>Mes commandes passées</h1>
        <% @delivered_orders.each do |delivered_order| %>
          <div>
          <%= render "order", order: delivered_order %>
          </div>
        <% end %>

      </div>
<!--       Contenu des ventes -->
      <div class="tab-content hidden" id="sales">
        <h2>Mes ventes</h2>
      </div>
<!--      Contenu de l'offre -->
      <div class="tab-content hidden" id="offers">
        <h2>Mon offre</h2>
      </div>
    </div>

