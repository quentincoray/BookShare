<% content_for :meta_title, "BookShare - #{@selling_book.book.title}" %>
<% content_for :meta_description, @selling_book.book.author %>
<%# content_for :meta_description, cloudinary_url(@selling_book.book.photo.path) %>

<div class="book-header">
  <div class ="container">
    <div class="book-header-container">
    <!-- En-tête avec photo titre auteur bookmate et commentaire -->
      <div class="row">
        <!-- Couverture du livre -->
          <div class="col-xs-2">
            <%= cl_image_tag @selling_book.book.photo.path, :width=>150, :gravity=>"auto", :crop=>"fill"%>
          </div>
        <!-- Description et commentaire -->
        <div class="col-xs-7">
          <h2 class ="red"><%= @selling_book.book.title %> - <%= @selling_book.book.author %></h2>
          <hr>
          <%= cl_image_tag @selling_book.bookmate_book_category.bookmate.user.photo.path, class:"bookmate-avatar" %>
          <h2>Le commentaire de <%= @selling_book.bookmate_book_category.bookmate.user.first_name %></h2>
          <p><%= @selling_book.personalized_comment%></p>
        </div>
        <!-- Achat -->
        <div class="col-xs-3">
          <h2>Etat : <%= @selling_book.condition%></h2>
          <h2><%= @selling_book.price%> €</h2>

          <!-- A faire -->
          <% if current_order.selling_books.include? @selling_book %>
            Le livre a bien été ajouté
          <% else %>
            <div id="btn-ajouter">
              <%= simple_form_for @order do |f| %>
                <%= hidden_field_tag :selling_book_id, @selling_book.id %>
                <%= f.submit "Ajouter à mon panier", class: "btn btn-primary" %>
              <% end %>
            </div>
          <% end %>
          <div id="phrase-done">
            <h2 class="green">Ajouté au panier</h2>
            <i class="fa fa-check green"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="book-body">
  <div class="container">
    <div class="row">
      <div class="col-xs-2">
        <div class="book-body-column">
          <!-- <h2>Vos bookmates ont aimé</h2> -->
          <!-- <p>Photos des bookmates</p> -->
        </div>
      </div>
      <div class="book-body-container">
        <div class="col-xs-9">
          <div class="row">
            <div class="book-body-column">
              <h2>Les autres livres de la catégorie</h2>
                <div class="books-container">
                  <% @selling_book.bookmate_book_category.books.each do |book| %>
                    <% next if book == @selling_book.book %>
                      <%= cl_image_tag book.photo.path, :width=>150, :gravity=>"auto", :crop=>"fill"%>
                    <% end %>
                </div>
              <%= link_to "Retour à la page du bookmate", bookmate_path(@bookmate) %>
            </div>
          </div>
          <div class="row">
            <div class="book-body-column">
              <h2>Résumé du livre</h2>
              <p id="book_summary"></p>
            </div>
          </div>
          <div class="row">
            <div class="book-body-column">
              <h2>Biographie de l'auteur</h2>
              <p id="author_bio">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla sed quam placerat, molestie nibh in, condimentum arcu. Sed pharetra nisl est. Nulla dignissim condimentum elit, a consectetur ex dictum id. Integer quis scelerisque ex, vitae sollicitudin massa. Maecenas rhoncus finibus suscipit. Suspendisse eu elit in lorem pulvinar condimentum. Interdum et malesuada fames ac ante ipsum primis in faucibus. Ut varius mauris lacus, sed malesuada mauris pretium vel. Maecenas vitae sodales quam.

