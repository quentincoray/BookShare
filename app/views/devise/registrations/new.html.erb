<div class = "form-container">
  <h2>Créer un compte</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: "Email", required: true, autofocus: true %>
      <%= f.input :password, label: "Mot de passe", required: true, hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, label: "Confirmez votre mot de passe", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Créer un compte" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
